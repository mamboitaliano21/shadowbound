<Page
    x:Class="Lab.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="cmdBack" Content="Back" HorizontalAlignment="Left" Height="77" Margin="954,70,0,0" VerticalAlignment="Top" Width="163" Click="GoBack" FontFamily="Global User Interface"/>
  
        <Slider x:Name="sldDifficulty" HorizontalAlignment="Left" Height="38" Margin="563,317,0,0" VerticalAlignment="Top" Width="159" ValueChanged="changeDifficulty" Value="1" IsTabStop="False" Minimum="0.5" Maximum="3" LargeChange="0.1" SmallChange="0.01" StepFrequency="0.01" FontFamily="Global User Interface"/>
        <TextBlock HorizontalAlignment="Left" Margin="563,276,0,0" TextWrapping="Wrap" Text="Difficulty" VerticalAlignment="Top" Height="35" Width="159" SelectionChanged="TextBlock_SelectionChanged" FontSize="14.667"/>
    </Grid>
</Page>

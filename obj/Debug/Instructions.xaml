<Page
    x:Class="Lab.Instructions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="cmdBack" Content="Back" HorizontalAlignment="Left" Height="77" Margin="954,70,0,0" VerticalAlignment="Top" Width="163"               />
        <TextBlock x:ConnectionId='2' x:Name="txtInstructions" HorizontalAlignment="Left" Height="454" Margin="76,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="804"                                                     FontSize="22">
        	<Run Text="In the World of Shadow Bound, you live in the dark, until these Evil Cube Being came to your home town and turn your family and friends into a cube. There is only one purpose for your life now: you life to collect your friend's soul that has turned into a cube before the Evil Being consume it.&#xA;&#xA;"/>
        	<Run Foreground="#FFF50F0F" FontWeight="Bold" Text="Instructions"/>
        	<Run Text="&#xA;You want to take as much souls as possible while hiding from the spotlights. If the enemy shine a light on you, you will gradually lose your HP until you finally die. Remember, there will always be someone following you!&#xA;&#xA;"/>
        	<Run Foreground="#FFF50F0F" FontWeight="Bold" Text="Control"/>
        	<Run Text="&#xA;Move forward by holding the right part of the screen.&#xA;Move backward by holding the left part of the screen.&#xA;Tilt your tablet clockwise or anti-clockwise to adjust your view.&#xA;WS movement&#xA;Arrow Left and Right to rotate your head"/>
        </TextBlock>
    </Grid>
</Page>

